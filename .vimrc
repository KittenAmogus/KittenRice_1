syntax on

set number
set relativenumber
set autocomplete
set autoindent
set noexpandtab
set cursorline

set tabstop=4
set colorcolumn=80

highlight CursorLine term=standout cterm=underline
highlight CursorLineNr ctermbg=darkblue ctermfg=yellow
highlight LineNr ctermbg=darkgrey ctermfg=yellow
highlight ColorColumn ctermbg=grey

